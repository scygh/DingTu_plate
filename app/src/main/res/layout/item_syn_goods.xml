<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_60dp"
    android:layout_marginTop="@dimen/offset_8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/main_card_bg"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/syn_item_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="001"
            android:textColor="@color/color_TextPrimary"
            android:textSize="@dimen/textsize_28sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/syn_item_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="鱼香肉丝"
            android:textColor="@color/color_TextPrimary"
            android:textSize="@dimen/textsize_28sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/syn_item_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/color_TextPrimary"
            android:textSize="@dimen/textsize_28sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
