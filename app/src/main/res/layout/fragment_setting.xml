<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.lianxi.dingtu.dingtu_plate.mvp.ui.widget.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/offset_60dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/offset_15dp"
                android:background="@drawable/setting_ll_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/offset_50dp"
                    android:padding="@dimen/size_10dp"
                    android:text="机器号"
                    android:textColor="@color/color_TextPrimary"
                    android:textSize="@dimen/textsize_30sp" />

                <TextView
                    android:id="@+id/mac_num"
                    android:layout_width="@dimen/size_300dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/offset_50dp"
                    android:background="@drawable/bg_listview"
                    android:hint="请填写机器号"
                    android:padding="@dimen/size_10dp"
                    android:textColor="@color/colorPrimaryText" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/offset_15dp"
                android:background="@drawable/setting_ll_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/offset_50dp"
                    android:padding="@dimen/size_10dp"
                    android:text="餐盘信息有效期"
                    android:textColor="@color/color_TextPrimary"
                    android:textSize="@dimen/textsize_30sp" />

                <TextView
                    android:id="@+id/plate_indate"
                    android:layout_width="@dimen/size_300dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/offset_50dp"
                    android:background="@drawable/bg_listview"
                    android:hint="餐盘有效期(以小时为单位)"
                    android:padding="@dimen/size_10dp"
                    android:textColor="@color/colorPrimaryText"
                    android:textColorHint="@color/divider" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/size_60dp"
                android:layout_marginRight="@dimen/size_60dp"
                android:background="@color/diy_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_ll_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/offset_50dp"
                    android:padding="@dimen/size_10dp"
                    android:text="读盘模式"
                    android:textColor="@color/color_TextPrimary"
                    android:textSize="@dimen/textsize_30sp" />

                <Spinner
                    android:id="@+id/spinner_pattern"
                    android:layout_width="@dimen/size_300dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/offset_50dp"
                    android:entries="@array/read_plate_pattern"
                    android:gravity="center"
                    android:spinnerMode="dropdown" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/size_60dp"
                android:layout_marginRight="@dimen/size_60dp"
                android:background="@color/diy_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_ll_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/offset_50dp"
                    android:padding="@dimen/offset_10dp"
                    android:text="开启自动消费"
                    android:textColor="@color/color_TextPrimary"
                    android:textSize="@dimen/textsize_30sp" />

                <Switch
                    android:id="@+id/auto_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/offset_50dp"
                    android:padding="@dimen/offset_10dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/offset_15dp"
                android:background="@drawable/setting_ll_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/offset_50dp"
                    android:padding="@dimen/offset_10dp"
                    android:text="开启打印"
                    android:textColor="@color/color_TextPrimary"
                    android:textSize="@dimen/textsize_30sp" />

                <Switch
                    android:id="@+id/switch_print"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/offset_50dp"
                    android:padding="@dimen/offset_10dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/size_60dp"
                android:layout_marginRight="@dimen/size_60dp"
                android:background="@color/diy_gray" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_ll_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/offset_50dp"
                    android:padding="@dimen/offset_10dp"
                    android:text="公司名称"
                    android:textColor="@color/color_TextPrimary"
                    android:textSize="@dimen/textsize_30sp" />

                <TextView
                    android:id="@+id/tv_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/offset_50dp"
                    android:hint="请点击此处填写信息"
                    android:padding="@dimen/offset_10dp"
                    android:textColorHint="@color/divider" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/offset_60dp"
                android:layout_marginRight="@dimen/offset_60dp"
                android:background="@color/diy_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_ll_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/offset_50dp"
                    android:padding="@dimen/offset_10dp"
                    android:text="地址"
                    android:textColor="@color/color_TextPrimary"
                    android:textSize="@dimen/textsize_30sp" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/offset_50dp"
                    android:hint="请点击此处填写信息"
                    android:padding="@dimen/offset_10dp"
                    android:textColorHint="@color/divider" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/offset_60dp"
                android:layout_marginRight="@dimen/offset_60dp"
                android:background="@color/diy_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_ll_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/offset_50dp"
                    android:padding="@dimen/offset_10dp"
                    android:text="联系方式"
                    android:textColor="@color/color_TextPrimary"
                    android:textSize="@dimen/textsize_30sp" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/offset_50dp"
                    android:hint="请点击此处填写信息"
                    android:padding="@dimen/offset_10dp"
                    android:textColorHint="@color/divider" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/offset_15dp"
                android:background="@drawable/setting_ll_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/offset_50dp"
                    android:layout_marginTop="@dimen/offset_10dp"
                    android:padding="@dimen/offset_10dp"
                    android:text="提示音量调节"
                    android:textColor="@color/color_TextPrimary"
                    android:textSize="@dimen/textsize_30sp" />

                <SeekBar
                    android:id="@+id/sounds_bar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_40dp"
                    android:layout_marginLeft="@dimen/offset_50dp"
                    android:layout_marginRight="@dimen/offset_50dp"
                    android:max="100"
                    android:progress="10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/offset_15dp"
                android:background="@drawable/setting_ll_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cache"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/offset_50dp"
                    android:layout_marginTop="0.1dp"
                    android:background="@color/color_TextPrimary"
                    android:padding="@dimen/offset_10dp"
                    android:text="清除缓存"
                    android:textColor="@color/color_TextPrimary"
                    android:textSize="@dimen/textsize_30sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/offset_50dp"
                    android:layout_marginTop="0.1dp"
                    android:padding="@dimen/offset_10dp"
                    android:text="检查新版本"
                    android:textColor="@color/color_TextPrimary"
                    android:textSize="@dimen/textsize_30sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/exit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/offset_50dp"
                    android:layout_marginTop="0.1dp"
                    android:padding="@dimen/offset_10dp"
                    android:text="退出登录"
                    android:textColor="@color/color_TextPrimary"
                    android:textSize="@dimen/textsize_30sp" />

            </LinearLayout>

        </LinearLayout>

    </com.lianxi.dingtu.dingtu_plate.mvp.ui.widget.ReboundScrollView>
</LinearLayout>