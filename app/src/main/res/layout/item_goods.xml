<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/item_goods_num"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@color/WHITE"
        android:gravity="center"
        android:text="001"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/BLACK"/>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/BLACK"/>
    <TextView
        android:id="@+id/item_goods_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@color/GRAY_200_A010"
        android:gravity="center"
        android:text="鱼香肉丝"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/BLACK"/>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/BLACK"/>
    <TextView
        android:id="@+id/item_goods_price"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@color/WHITE"
        android:gravity="center"
        android:text="10"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/BLACK"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/BLACK"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@color/GRAY_200_A010"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_btn_reduce"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/reduce_selected"
           />

        <TextView
            android:id="@+id/item_goods_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/BLACK"
            android:text="2"
            android:layout_margin="5dp"
            android:textSize="28sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/item_btn_plus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/plus_selected"
            />
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/BLACK"/>
    <TextView
        android:id="@+id/item_goods_allprice"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@color/WHITE"
        android:gravity="center"
        android:text="20"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/BLACK"/>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/BLACK"/>

</LinearLayout>
