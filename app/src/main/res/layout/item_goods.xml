<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_60dp"
    android:layout_marginTop="@dimen/offset_8dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/item_goods_num"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/WHITE"
        android:gravity="center"
        android:text="001"
        android:textColor="@color/color_TextPrimary"
        android:textSize="@dimen/textsize_28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_goods_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/GRAY_200_A010"
        android:gravity="center"
        android:text="鱼香肉丝"
        android:textColor="@color/color_TextPrimary"
        android:textSize="@dimen/textsize_28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_goods_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/WHITE"
        android:gravity="center"
        android:text="10"
        android:textColor="@color/color_TextPrimary"
        android:textSize="@dimen/textsize_28sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/GRAY_200_A010"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_btn_reduce"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="@dimen/size_40dp"
            android:background="@drawable/reduce_selected" />

        <TextView
            android:id="@+id/item_goods_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/offset_10dp"
            android:text="2"
            android:textColor="@color/color_TextPrimary"
            android:textSize="@dimen/textsize_28sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/item_btn_plus"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="@dimen/size_40dp"
            android:src="@drawable/plus_selected" />
    </LinearLayout>


    <TextView
        android:id="@+id/item_goods_allprice"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/WHITE"
        android:gravity="center"
        android:text="20"
        android:textColor="@color/color_TextPrimary"
        android:textSize="@dimen/textsize_28sp"
        android:textStyle="bold" />


</LinearLayout>
