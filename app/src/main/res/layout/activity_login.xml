<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/size_600dp"
        android:layout_height="@dimen/size_600dp"
        android:background="@drawable/login_card_bg"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/offset_20dp"
            android:text="请登录。"
            android:textColor="@color/color_TextPrimary"
            android:textSize="@dimen/textsize_20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_60dp"
            android:layout_marginLeft="@dimen/offset_25dp"
            android:layout_marginRight="@dimen/offset_25dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/offset_20dp">

            <EditText
                android:id="@+id/et_username"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_60dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@mipmap/access"
                android:drawablePadding="@dimen/offset_20dp"
                android:focusableInTouchMode="true"
                android:hint="请输入账号"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/color_TextPrimary"
                android:textSize="@dimen/textsize_16sp" />

            <ImageView
                android:id="@+id/iv_clean_phone"
                android:layout_width="@dimen/size_40dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_clear"
                android:visibility="gone" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/offset_25dp"
            android:layout_marginRight="@dimen/offset_25dp"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_60dp"
            android:layout_marginLeft="@dimen/offset_25dp"
            android:layout_marginRight="@dimen/offset_25dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/offset_20dp">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_60dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@mipmap/ic_password_flag"
                android:drawablePadding="@dimen/offset_20dp"
                android:focusableInTouchMode="true"
                android:hint="请输入密码"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/color_TextPrimary"
                android:textSize="@dimen/textsize_16sp" />

            <ImageView
                android:id="@+id/clean_password"
                android:layout_width="@dimen/size_40dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_clear"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_show_pwd"
                android:layout_width="@dimen/size_40dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@mipmap/pass_gone" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/offset_25dp"
            android:layout_marginRight="@dimen/offset_25dp"
            android:background="@color/divider" />

        <CheckBox
            android:id="@+id/cbIsRememberPass"
            style="@style/CustomCheckBoxTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/offset_40dp"
            android:imeOptions="actionDone"
            android:paddingLeft="@dimen/offset_25dp"
            android:text="记住密码"
            android:textColor="@color/color_TextPrimary"
            android:textSize="@dimen/textsize_16sp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_60dp"
            android:layout_margin="@dimen/offset_25dp"
            android:background="@drawable/bg_btn_login_selected"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_20sp" />
    </LinearLayout>
</LinearLayout>