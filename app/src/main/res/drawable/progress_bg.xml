<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!--矩形每个角的弧度半径都定义为8 -->
    <corners android:radius="@dimen/size_10dp" />

    <!--加一个普通的边线-->
    <stroke
        android:width="2dp"
        android:color="@color/colorAccent" />

    <!--控制内容与该shape的边距-->
    <padding
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp" />
</shape>